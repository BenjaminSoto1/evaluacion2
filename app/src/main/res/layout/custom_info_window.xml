
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/infoImage"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/brotherhood" />

    <TextView
        android:id="@+id/infoTextView2"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Barberia Brotherhood" />

    <TextView
        android:id="@+id/infoTextView3"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Horario: Domingo Cerrado" />

    <TextView
        android:id="@+id/infoTextView4"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:text="Lunes 10 am - 7 pm" />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:text="Martes 10 am - 7 pm" />

    <TextView
        android:id="@+id/infoTextView5"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:text="Miercoles 10 am - 7 pm" />

    <TextView
        android:id="@+id/infoTextView6"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:text="Jueves 10 am - 7 pm" />

    <TextView
        android:id="@+id/infoTextView7"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:text="Viernes 10 am - 7 pm" />

    <TextView
        android:id="@+id/infoTextView8"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:text="Sabado 10 am - 9 pm" />



</LinearLayout>